  tags = merge(
    local.common_tags,
    {
      Project = "dev-tranphong134"
    }
  )
  name               = "AmazonEKSLoadBalancerControllerRole"
  description        = "docs.aws.amazon.com/eks/latest/userguide/aws-load-balancer-controller.html"
  assume_role_policy = <<EOF
{
    "Version": "2012-10-17",
    "Statement": [
        {
            "Effect": "Allow",
            "Principal": {
                "Federated": "arn:aws:iam::318150370907:oidc-provider/oidc.eks.ap-southeast-1.amazonaws.com/id/8FE17A996883ED80861370779DFDB22F"
            },
            "Action": "sts:AssumeRoleWithWebIdentity",
            "Condition": {
                "StringEquals": {
                    "oidc.eks.ap-southeast-1.amazonaws.com/id/8FE17A996883ED80861370779DFDB22F:aud": "sts.amazonaws.com",
                    "oidc.eks.ap-southeast-1.amazonaws.com/id/8FE17A996883ED80861370779DFDB22F:sub": "system:serviceaccount:kube-system:aws-load-balancer-controller"
                }
            }
        }
    ]
}
EOF
}

resource "aws_iam_role_policy_attachment" "eks-lb-role-policy" {
  role       = aws_iam_role.eks-lb-role.name
  policy_arn = aws_iam_policy.eks-lb-policy.arn
}
